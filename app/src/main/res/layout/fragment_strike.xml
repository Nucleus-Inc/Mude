<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/start_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp"
        android:background="@color/card_background">

        <RelativeLayout
            android:id="@+id/know_more_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/handcuffs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resposabilização dos Partidos Políticos e Criminalização do Caixa 2"
                android:textSize="30sp"
                android:textColor="@color/material_drawer_primary_dark"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/handcuffs_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A #medida8 propõe a responsabilização objetiva dos partidos políticos em relação a práticas corruptas, à criminalização da contabilidade paralela (caixa 2) e à criminalização eleitoral da lavagem de dinheiro oriundo de infração penal, de fontes de recursos vedadas pela legislação eleitoral ou que não tenham sido contabilizados na forma exigida pela legislação."
                android:layout_below="@+id/handcuffs_title"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/material_drawer_primary_dark"
                android:textSize="14sp"
                android:padding="5dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
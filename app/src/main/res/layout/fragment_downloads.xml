                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_banner_internet"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banner de Internet"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/download_1_id_app_layout_2"
                    android:id="@+id/download_1_id_app_layout_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_spring16"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prisma de Mesa"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/download_1_id_app_layout_3"
                    android:id="@+id/download_1_id_app_layout_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_star75"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filipeta"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/download_1_id_app_layout_4"
                    android:id="@+id/download_1_id_app_layout_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_protest7"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cartaz de Apoio"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/download_1_id_app_layout_5"
                    android:id="@+id/download_1_id_app_layout_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_billboard"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outdoor"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/download_1_id_app_layout_6"
                    android:id="@+id/download_1_id_app_layout_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_book270"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Broadside"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/download_1_id_app_layout_7"
                    android:id="@+id/download_1_id_app_layout_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_clothing538"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camisetas"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
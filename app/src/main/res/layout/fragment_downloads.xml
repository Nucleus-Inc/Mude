<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:fillViewport="false"
    android:id="@+id/frag_corruption">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/download_firstcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="5dp"
            android:layout_alignBottom="@+id/divider"
            android:layout_margin="5dp"
            android:background="@color/card_background"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/download_id_app_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MATERIAL INSTITUCIONAL"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    />
                <LinearLayout
                    android:layout_below="@+id/download_id_app_1"
                    android:id="@+id/download_id_app_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_mail_outline_black_48dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carta de Apoio (Organizações)"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/download_id_app_layout"
                    android:id="@+id/download_id_app_layout_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_political1_1"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Propostas Legislativas"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_below="@+id/download_id_app_layout_1"
                    android:id="@+id/download_id_app_layout_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_education31"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sumário Executivo"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/download_id_app_layout_2"
                    android:id="@+id/download_id_app_layout_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_tie13"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apoiadores"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_below="@+id/download_id_app_layout_3"
                    android:id="@+id/download_id_app_layout_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_pens2"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lista de Assinaturas"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/download_secondcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="5dp"
            android:layout_alignBottom="@+id/divider"
            android:layout_margin="5dp"
            android:background="@color/card_background"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/download_1_id_app_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MATERIAL DE CAMPANHA"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    />
                <LinearLayout
                    android:layout_below="@+id/download_1_id_app_1"
                    android:id="@+id/download_1_id_app_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_write12"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resumo das Medidas"
                        android:paddingTop="15dp"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/download_1_id_app_layout"
                    android:id="@+id/download_1_id_app_layout_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_painting22"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        />

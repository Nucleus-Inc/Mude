<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:fillViewport="false"
    android:id="@+id/frag_about">
    <android.support.v7.widget.CardView
        android:id="@+id/start_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp"
        android:background="@color/card_background"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/bancosantos_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banestado"
                android:textSize="30sp"
                android:textColor="@color/material_drawer_accent_light"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/bancosantos_id_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O que é?"
                android:textSize="20sp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/bancosantos_id_title"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:id="@+id/bancosantos_id_subtitle_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entre maio de 2003 e setembro de 2007, uma força-tarefa encabeçada pelo Ministério Público Federal denunciou 684 pessoas, das quais 97 foram condenadas, em um esquema que envolvia a remessa fraudulenta de U$ 28 bilhões por meio de contas CC-5 (contas de não residentes no Banestado, Banco do Brasil, Banco Araucária, Bemge e Banco Real). O Banestado (Banco do Estado do Paraná) ficou no centro do escândalo.
                \nO MPF conseguiu que fossem bloqueados R$ 380 milhões em contas no Brasil e outros R$ 34,7 milhões, no exterior. Para isso, foram investigadas mais de 1.170 contas fora do país – o que resultou em uma base de dados de 1,9 milhão de registros de movimentações financeiras no exterior.
                "
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/bancosantos_id_subtitle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:paddingBottom="10dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</ScrollView>
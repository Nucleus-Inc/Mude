<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/start_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp"
        android:background="@color/card_background">

        <RelativeLayout
            android:id="@+id/corruption_types_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/mpf_operation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operações do MPF"
                android:textSize="30sp"
                android:textColor="@color/material_drawer_primary_dark"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
            />

            <TextView
                android:id="@+id/mpf_operation_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casos Emblemáticos"
                android:layout_below="@+id/mpf_operation_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="@color/material_drawer_primary_dark"
                android:textSize="14sp"
                android:padding="5dp"
            />

            <TextView
                android:id="@+id/mpf_operation_subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione um dos ícones abaixo para conhecer detalhes da atuação do MPF em diversos casos de corrupção."
                android:textColor="@color/material_drawer_primary_icon"
                android:layout_below="@+id/mpf_operation_subtitle"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
            />

            <LinearLayout
                android:layout_below="@+id/mpf_operation_subtitle2"
                android:id="@+id/mpf_operation_zelotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_zelotes"
                        android:layout_marginEnd="15dp"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zelotes"
                        android:textColor="@color/material_drawer_primary_dark"
                        android:textSize="14sp"
                        android:paddingTop="15dp"
                    />
            </LinearLayout>

            <LinearLayout
            android:layout_below="@+id/mpf_operation_zelotes"
            android:id="@+id/mpf_operation_lava_jato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_lavajato"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lava Jato"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/mpf_operation_lava_jato"
                android:id="@+id/mpf_operation_banco_santos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_bancosantos"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banco Santos"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/mpf_operation_banco_santos"
                android:id="@+id/mpf_operation_sanguessuga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_opera"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sanguessuga"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/mpf_operation_sanguessuga"
                android:id="@+id/mpf_operation_sudam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_sudam"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sudam"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/mpf_operation_sudam"
                android:id="@+id/mpf_operation_mensalao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_mensa"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mensalão"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/mpf_operation_mensalao"
                android:id="@+id/mpf_operation_carlcach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_carlcac"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carlinhos Cachoeira"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/mpf_operation_carlcach"
                android:id="@+id/mpf_operation_banestado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_banestado"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banestado"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/mpf_operation_banestado"
                android:id="@+id/mpf_operation_opanaconda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_anac"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operação Anaconda"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/mpf_operation_opanaconda"
                android:id="@+id/mpf_operation_luiz_estevao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_luizest"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luiz Estevão"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/mpf_operation_luiz_estevao"
                android:id="@+id/mpf_operation_scuderie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_luizest"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scuderie Le Cocq"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/mpf_operation_scuderie"
                android:id="@+id/mpf_operation_jorgina_freitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_jorgina"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jorgina de Freitas"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textSize="14sp"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
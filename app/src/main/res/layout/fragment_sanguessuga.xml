<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:fillViewport="false"
    android:id="@+id/frag_about">
    <android.support.v7.widget.CardView
        android:id="@+id/start_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp"
        android:background="@color/card_background"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/carlinhos_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanguessuga"
                android:textSize="30sp"
                android:textColor="@color/material_drawer_accent_light"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />

            <FrameLayout
                android:name="com.google.android.youtube.player.YouTubePlayerFragment"
                android:id="@+id/youtube_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                android:padding="10dp"
                android:layout_below="@+id/carlinhos_id_title"
                />

            <TextView
                android:id="@+id/carlinhos_id_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O que é?"
                android:textSize="20sp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/youtube_layout"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:id="@+id/carlinhos_id_subtitle_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Controladoria Geral da União (CGU) e o MPF revelaram a existência de uma organização criminosa que, desde o ano 2000, desviava verbas federais do Fundo Nacional de Saúde (FNS). A primeira vez em que foi detectada a atuação do esquema pelos órgãos de controle foi em 2002, no Acre, quando o Ministério Público Federal daquele estado verificou a existência de manipulação de licitações. Em maio de 2006, a Polícia Federal deflagrou a Operação Sanguessuga, em que deputados, prefeitos e empresários foram flagrados atuando em um esquema que consistia na venda de emendas individuais ou genéricas ao Orçamento Geral da União, fraude em licitação e superfaturamento na compra de ambulâncias ou equipamentos "
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/carlinhos_id_subtitle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:paddingBottom="10dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</ScrollView>
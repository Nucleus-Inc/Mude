<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:fillViewport="false"
    android:id="@+id/frag_corruption">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/start_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="5dp"
            android:layout_alignBottom="@+id/divider"
            android:layout_margin="5dp"
            android:background="@color/card_background"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/corruption_id_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A Corrupção"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textStyle="bold"
                    />
                <TextView
                android:id="@+id/corruption_id_app_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se queremos um país livre de corrupção, precisamos nos unir. O Ministério Público Federal acredita em um Brasil mais justo, com menos corrupção e menos impunidade. É possível transformar a indignação com a corrupção em mudanças efetivas para a sociedade."
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/corruption_id_app"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />

                <TextView
                    android:id="@+id/corruption_id_app_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para acabar com o círculo vicioso de corrupção privada e pública, é preciso implementar mudanças sistêmicas e estruturais. Mudanças profundas em todas"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:layout_below="@+id/corruption_id_app_1"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    />

                <Button
                    android:id="@+id/corruption_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conheça Alguns Tipos de Corrupção"
                    android:layout_below="@+id/corruption_id_app_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/know_more_selector_button"
                    android:textColor="@color/md_white_1000"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/second_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="5dp"
            android:layout_alignBottom="@+id/divider"
            android:layout_margin="5dp"
            android:background="@color/card_background"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/corruption_1_id_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A Atuação do MPF"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/corruption_1_id_app_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O MPF tem trabalhado com rapidez e agilidade nos processos envolvendo crimes de corrupção. Mesmo assim, nem sempre alcança a Justiça, por que o sistema favorece a demora, a prescrição (cancelamento do caso penal decorrente da demora) e a anulação do caso com base em formalidades. "
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:layout_below="@+id/corruption_1_id_app"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    />

                <TextView
                    android:id="@+id/corruption_1_id_app_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para construirmos uma nova realidade, o MPF apresenta dez medidas para aprimorar a prevenção e o combate à corrupção e à impunidade. As propostas objetivam Transparência, Prevenção, Eficiência e Efetividade."
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/material_drawer_primary_dark"
                    android:layout_below="@+id/corruption_1_id_app_1"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    />

                <Button
                    android:id="@+id/corruption_1_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Operações do MPF"
                    android:layout_below="@+id/corruption_1_id_app_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/know_more_selector_button"
                    android:textColor="@color/md_white_1000"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
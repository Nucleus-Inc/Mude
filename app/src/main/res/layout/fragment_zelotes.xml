<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:fillViewport="false"
    android:id="@+id/frag_about">
    <android.support.v7.widget.CardView
        android:id="@+id/start_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp"
        android:background="@color/card_background"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/bancosantos_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zelotes"
                android:textSize="30sp"
                android:textColor="@color/material_drawer_accent_light"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/bancosantos_id_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O que é?"
                android:textSize="20sp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/bancosantos_id_title"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:id="@+id/bancosantos_id_subtitle_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operação deflagrada em 26 de março de 2015, como parte das investigações do Ministério Público Federal (MPF) para apurar suspeitas de manipulação de julgamentos de processos no Conselho Administrativo de Recursos Fiscais (Carf), ligado ao Ministério da Fazenda. Ao todo, 74 julgamentos realizados entre 2005 e 2013 estão sendo analisados. Juntos, eles somam R$ 19,6 bilhões que deixaram de ser recolhidos aos cofres públicos. A principal suspeita é que parte dos débitos lançados e cobrados pela Receita Federal foi cancelada de forma indevida, com base nos julgamentos manipulados."
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/bancosantos_id_subtitle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:paddingBottom="10dp"
                />

            <TextView
                android:id="@+id/bancosantos_id_subtitle_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Como Funcionava o Esquema?"
                android:textSize="20sp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/bancosantos_id_subtitle_1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:id="@+id/bancosantos_id_subtitle_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Integrantes do esquema – em geral, ex-conselheiros e consultores – selecionavam processos de grande valor que estavam na pauta de julgamento do Carf. Em seguida, os operadores procuravam o contribuinte a quem ofereciam “solução”. Após a contratação, o grupo passava a atuar no fluxo do processo aproveitando da influência de integrantes do grupo e, possivelmente, recorrendo à corrupção de conselheiros. O resultado do julgamento favorável ao contribuinte cancelava o débito, impondo prejuízos milionários ao fisco."
                 android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/bancosantos_id_subtitle_2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:paddingBottom="10dp"
                />

            <ImageView
                android:id="@+id/bancosantos_id_subtitle_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bancosantos_id_subtitle_3"
                android:background="@drawable/infograficozelotes"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/bancosantos_id_subtitle_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por que zelotes?"
                android:textSize="20sp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/bancosantos_id_subtitle_4"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:id="@+id/bancosantos_id_subtitle_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O termo zelotes, que deu nome à operação, significa zelo, cuidado fingido. Os conselheiros julgadores do Carf deveriam se pautar pelo zelo e imparcialidade, mas o que as investigações mostraram é que parte deles julgava processos com base em interesses particulares, principalmente para conseguir vantagens financeiras."
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/bancosantos_id_subtitle_5"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:paddingBottom="10dp"
                />

            <TextView
                android:id="@+id/bancosantos_id_subtitle_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Como funciona o Carf"
                android:textSize="20sp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/bancosantos_id_subtitle_6"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:id="@+id/bancosantos_id_subtitle_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O Conselho Administrativo de Recursos Fiscais é um órgão colegiado, paritário, que tem por finalidade julgar, em segunda instância , recursos administrativos fiscais referentes a tributos cobrados pela Receita Federal. Está estruturado em três seções de julgamento, especializadas por matéria. Em cada seção, são quatro câmaras divididas em três turmas. Cada turma é composta por seis membros: três representantes da Fazenda Nacional e três representantes dos contribuintes, indicados pelas Confederações Empresariais e pelas Centrais Sindicais. No total, o Carf possui 216 conselheiros."
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="@color/material_drawer_primary_dark"
                android:layout_below="@+id/bancosantos_id_subtitle_7"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:paddingBottom="10dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</ScrollView>
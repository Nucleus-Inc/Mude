<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/ten_measure_title"
        android:text="Nossa Meta"
        android:textSize="30sp"
        android:textColor="@color/material_drawer_primary_dark"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/ten_measure_number_subscriptions"
        android:text="@string/number_subscriptions"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/material_drawer_accent_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ten_measure_title"
        />
    <TextView
        android:id="@+id/ten_measure_subtitle"
        android:text="Assinaturas"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/material_drawer_primary_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ten_measure_number_subscriptions"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ten_measure_subtitle_2"
        android:text="Precisamos de todas essas assinaturas para criarmos um projeto de lei que ajude a varrear a corrupção do nosso país."
        android:textSize="16sp"
        android:textColor="@color/material_drawer_primary_dark"
        android:layout_below="@+id/ten_measure_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />
</RelativeLayout>
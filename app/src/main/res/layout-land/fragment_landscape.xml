<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/start_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp"
        android:layout_alignEnd="@+id/divider"
        android:layout_alignRight="@+id/divider"
        android:layout_margin="5dp"
        android:background="@color/card_background"
        >

        <include layout="@layout/subscriptions"/>

    </android.support.v7.widget.CardView>

    <Space
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/my_card_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/start_card"
        android:layout_toRightOf="@+id/start_card"
        android:background="@color/card_background"
        >

        <include layout="@layout/ten_measures"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>